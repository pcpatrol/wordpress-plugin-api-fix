{
	"name": "pcpatrol/wordpress-plugin-api-fix",
	"type": "wordpress-muplugin",
	"license": "GPL-2.0-only",
	"description": "Dit bestand moet worden geplaatst in de mu-plugins van je WordPress installatie om ervoor te zorgen dat je wordpress plugins kunt excluden van Ajax Requests die gedaan worden.",
	"authors": [
		{
			"name": "PC Patrol",
			"email": "info@pcpatrol.nl",
			"homepage": "https://www.pcpatrol.nl"
		}
	],
	"keywords": [
		"wordpress"
	],
	"config": {
		"platform": {
			"php": "8.1"
		},
		"optimize-autoloader": true,
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true,
			"composer/installers": true,
			"johnpbloch/wordpress-core-installer": true,
			"phpro/grumphp": true
		}
	},
	"require": {
		"php": ">=8.0",
		"composer/installers": "~1.0|~2.0"
	}

}
